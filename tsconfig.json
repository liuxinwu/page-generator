{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "components/*": ["./src/components/*"],
      "layout/*": ["./src/layout/*"],
      "views/*": ["./src/views/*"],
      "store/*": ["./src/store/*"],
      "scss/*": ["./src/scss/*"],
      "router/*": ["./src/router/*"],
      "api/*": ["./src/api/*"],
      "config/*": ["./src/config/*"],
      "utils/*": ["./src/utils/*"],
      "hooks/*": ["./src/hooks/*"],
      "serve/*": ["./src/serve/*"],
      "cache/*": ["./src/cache/*"],
      "images/*": ["./src/images/*"]
    }
  },
  "include": ["./src"]
}
